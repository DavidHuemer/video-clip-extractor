<UserControl x:Class="VideoClipExtractor.UI.Panels.MenuPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:menuVm="clr-namespace:VideoClipExtractor.UI.ViewModels.Menu"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=menuVm:MenuViewModel}">
    <Menu>
        <MenuItem Header="File">
            <MenuItem Header="New Project" Command="{Binding NewProject}" />
            <MenuItem Header="Open Project" Command="{Binding OpenProject}" />
            <MenuItem Header="Save" Command="{Binding SaveProject}" />
        </MenuItem>
    </Menu>
</UserControl>